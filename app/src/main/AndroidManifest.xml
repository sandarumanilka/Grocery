<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.grocery"
    android:installLocation="auto">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="Grocery"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".activities.shopDetailsActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".activities.EditProductActivity" />
        <activity android:name=".activities.addProductActivity" />
        <activity android:name=".activities.ProfileEditAdminActivity" />
        <activity android:name=".activities.ProfileEditSellerActivity" />
        <activity android:name=".activities.ProfileEditBuyerActivity" />
        <activity android:name=".activities.MainAdminActivity" />
        <activity android:name=".activities.RegisterAdminActivity" />
        <activity android:name=".activities.MainSellerActivity" />
        <activity android:name=".activities.MainBuyerActivity" />
        <activity android:name=".Main_register" />
        <activity android:name=".activities.RegisterBuyerActivity" />
        <activity android:name=".activities.RegisterSellerActivity" />
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>