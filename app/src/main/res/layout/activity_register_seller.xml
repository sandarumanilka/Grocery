<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".activities.RegisterSellerActivity">

    <!--Toolbar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="10dp"
        android:background="@drawable/shape_rect01">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_chevron_left_24"
            android:background="@null"
            >
        </ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Seller Sign Up"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"/>

    </RelativeLayout>
    <ImageView
        android:id="@+id/iconIv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_circle01"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_key_white"
        android:padding="5dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iconIv">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                android:id="@+id/profileIv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                app:c_border="true"
                app:c_border_color="@color/colorPrimary"
                app:c_border_width="1dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_person_grey"
                />

            <EditText
                android:id="@+id/nameET"
                android:layout_below="@id/profileIv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Full Name"
                android:padding="10dp"
                android:background="@drawable/shape_rect02"
                android:drawableStart="@drawable/ic_person_grey"
                android:drawablePadding="5dp"
                android:inputType="textPersonName|textCapWords"
                />

            <EditText
                android:id="@+id/shopNameET"
                android:layout_below="@id/nameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Shop Name"
                android:padding="10dp"
                android:background="@drawable/shape_rect02"
                android:drawableStart="@drawable/ic_baseline_shop"
                android:drawablePadding="5dp"
                android:inputType="textPersonName|textCapWords"
                />

            <EditText
                android:id="@+id/phoneET"
                android:layout_below="@id/shopNameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Contact Number"
                android:padding="10dp"
                android:background="@drawable/shape_rect02"
                android:drawableStart="@drawable/ic_baseline_phone_24"
                android:drawablePadding="5dp"
                android:inputType="phone"
                />

            <EditText
                android:id="@+id/addressET"
                android:layout_below="@id/phoneET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Address"
                android:padding="10dp"
                android:background="@drawable/shape_rect02"
                android:drawableStart="@drawable/ic_baseline_home_24"
                android:drawablePadding="5dp"
                android:inputType="textPostalAddress|textMultiLine"
                />
            <EditText
                android:id="@+id/deliveryFeeET"
                android:layout_below="@id/addressET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Delivery Fee"
                android:padding="10dp"
                android:background="@drawable/shape_rect02"
                android:drawableStart="@drawable/ic_baseline_delivery"
                android:drawablePadding="5dp"
                android:inputType="numberDecimal"
                />

            <EditText
                android:id="@+id/emailET"
                android:layout_below="@id/deliveryFeeET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Email"
                android:padding="10dp"
                android:background="@drawable/shape_rect02"
                android:drawableStart="@drawable/ic_mail_grey"
                android:drawablePadding="5dp"
                android:inputType="textEmailAddress"
                />

            <EditText
                android:id="@+id/passwordET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_below="@id/emailET"
                android:hint="Password"
                android:padding="10dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/shape_rect02"
                android:drawableStart="@drawable/ic_key_grey"
                android:drawablePadding="5dp"
                android:inputType="textPassword"
                />

            <EditText
                android:id="@+id/cPasswordET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_below="@id/passwordET"
                android:hint="Confirm Password"
                android:padding="10dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/shape_rect02"
                android:drawableStart="@drawable/ic_key_grey"
                android:drawablePadding="5dp"
                android:inputType="textPassword"
                />

            <Button
                android:id="@+id/registerBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="120dp"
                android:layout_below="@id/cPasswordET"
                android:background="#85B54F"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
                android:layout_centerHorizontal="true"
                android:text="Sign Up"
                android:drawablePadding="5dp"
                />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>